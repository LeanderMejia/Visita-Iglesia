<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.ReferenceFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="References"
            android:textColor="@color/black_100"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/poppins"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.049"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/description_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Descriptions and mass schedule: "
            android:textColor="@color/black_100"
            android:textSize="15sp"
            app:fontFamily="@font/poppins"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/description_link"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="https://www.parishph.com/ "
            android:textColor="@color/blue"
            android:textIsSelectable="true"
            android:textSize="15sp"
            app:fontFamily="@font/poppins"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_title" />

        <TextView
            android:id="@+id/church_info_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Church Info: "
            android:textColor="@color/black_100"
            android:textSize="15sp"
            app:fontFamily="@font/poppins"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_link" />

        <TextView
            android:id="@+id/church_info_link"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="https://catholink.ph/tarlac/?fbclid=IwAR1sJ5EBl1uXU-FdsEjVsBI5eJiTXQAENndOlT3hfxTQC075i43BXBpLwlg "
            android:textColor="@color/blue"
            android:textIsSelectable="true"
            android:textSize="15sp"
            app:fontFamily="@font/poppins"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/church_info_title" />

        <TextView
            android:id="@+id/church_image_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Church Image Source: "
            android:textColor="@color/black_100"
            android:textSize="15sp"
            app:fontFamily="@font/poppins"
            app:layout_constraintEnd_toEndOf="@id/church_info_link"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/church_info_link" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vicariate_list_ref_rec_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/church_image_title" />

        <TextView
            android:id="@+id/prayers_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Prayers"
            android:textColor="@color/black_100"
            android:textSize="15sp"
            app:fontFamily="@font/poppins"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vicariate_list_ref_rec_view" />

        <TextView
            android:id="@+id/prayers_link"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="https://www.catholicity.com/prayer/prayers.html "
            android:textColor="@color/blue"
            android:textIsSelectable="true"
            android:textSize="15sp"
            app:fontFamily="@font/poppins"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/prayers_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>